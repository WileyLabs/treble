{
  "name": "Treble",
  "description": "Treble extracts triples from the Web while you browse.",
  "manifest_version": 2,
  "version": "0.0.1",
  "homepage_url": "https://wileylabs.github.io/",

  "applications": {
    "gecko": {
      "id": "treble@wileylabs.github.io",
      "strict_min_version": "45.0"
    }
  },

  "icons": {
    "24": "icons/logo-24.png",
    "32": "icons/logo-32.png",
    "48": "icons/logo-48.png",
    "64": "icons/logo-64.png"
  },

  "background": {
    "scripts": [
      "lib/browser-polyfill.js",
      "background.js"
    ]
  },

  "browser_action": {
    "default_icon": "icons/logo-32.png",
    "default_title": "Treble the triples",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "*://*.w3.org/*"
  ]

}
